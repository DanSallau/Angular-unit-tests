{
	"angularCompilerOptions": {
		"genDir": "./ngfactory"
	},
	"compilerOptions": {
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": [
			"es6",
			"es7",
			"es2015",
			"dom"
		],
		"module": "es2015",
		"moduleResolution": "node",
		"noEmitHelpers": true,
		"noImplicitAny": false,
		"outDir": "lib",
		"rootDir": ".",
		"sourceMap": true,
		"skipLibCheck": true,
		"target": "es5",
		// "noUnusedLocals": true,
    	// "noUnusedParameters": true,
	}
}